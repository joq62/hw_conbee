set_on(DeviceName,DeviceState)>
    gen_server:call(?SERVER, {set_on,DeviceName,DeviceState}).
set_off(DeviceName,DeviceState)>
    gen_server:call(?SERVER, {set_off,DeviceName,DeviceState}).
is_on(DeviceName)>
    gen_server:call(?SERVER, {is_on,DeviceName}).
is_off(DeviceName,State)>
    gen_server:call(?SERVER, {set_off,DeviceName,State}).







ping() ->
    gen_server:call(ops_node_server, {ping}).

get_state() ->
    gen_server:call(ops_node_server, {get_state}).

